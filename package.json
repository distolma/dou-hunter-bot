{
  "name": "dou-hunter-bot",
  "version": "1.0.0",
  "main": "package/app.ts",
  "description": "Telegram bot, which helps you to find IT vacancies on DOU.ua",
  "repository": "git@github.com:distolma/dou-hunter-bot.git",
  "author": "distolma <djmakaron2009@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon -e ts -w ./package -x ts-node -r dotenv/config package/app.ts",
    "build": "tsc",
    "lint": "tslint --fix ./package/**",
    "prettier": "prettier --write ./package/**"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package/**/*.ts": ["npm run lint", "npm run prettier", "git add"]
  },
  "engines": {
    "yarn": ">1.2.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/cookie": "^0.3.3",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/lodash": "^4.14.138",
    "@types/mongoose": "^5.5.17",
    "@types/node": "^10.7.1",
    "@types/node-emoji": "^1.8.1",
    "dotenv": "^8.1.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cookie": "^0.4.0",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.1",
    "mongoose-sanitizer": "^1.0.0",
    "ms": "^2.1.2",
    "node-emoji": "^1.10.0",
    "system-sleep": "^1.3.6",
    "telegraf": "^3.32.0",
    "telegraf-session-local": "^1.0.2"
  }
}
